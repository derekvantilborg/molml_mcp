def tune_hyperparameter_ml_model(
    input_filename: str,
    feature_vectors_filename: str,
    target_column: str,
    project_manifest_path: str,
    output_filename: str,
    explanation: str,
    model_algorithm: str = "random_forest",
    param_grid: dict = None,
    search_strategy: str = "grid",
    n_searches: int = 50,
    cv_strategy: str = "stratified",
    n_folds: int = 5,
    train_fraction: float = 0.8,
    scaffold_column: Optional[str] = None,
    scoring_metric: str = "auto",
    task_type: str = "auto",
    random_state: int = 42
) -> dict:
    """perform hyperparameter tuning for an ML model. Return a dict with the best hyperparameters and performance.
    hyperparameter spaces can be looked up with get_hyperparameter_space()"""